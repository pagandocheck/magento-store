<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
<policies>
        <policy id="script-src">
            <values>
                <!--CDN-->
                <value id="cloudflare" type="host">*.cloudflare.com</value>

                <!--Google-->
                <!-- <value id="google-analytics" type="host">www.google-analytics.com</value> -->

                <!--Functions-->
                <!-- <value id="example" type="host">*.trustedshops.com</value> -->
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <!--CDN-->
                <value id="cloudflare" type="host">*.cloudflare.com</value>

                <!--Functions-->
                <!-- <value id="example" type="host">*.trustedshops.com</value> -->
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <!--CDN-->
                <value id="cloudflare" type="host">*.cloudflare.com</value>

                <!--Video-->
                <!-- <value id="youtube-img" type="host">https://s.ytimg.com</value> -->

                <!--Functions-->
                <value id="dummy-host" type="host">http://dummy-host.example.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <!--CDN-->
                <value id="cloudflare" type="host">*.cloudflare.com</value>

                <!--Payments-->
                <!-- <value id="paypal" type="host">*.paypal.com</value> -->

                <!-- Production -->
                <value id="pagando-check" type="host">https://api.pagandocheck.com</value>

                <!-- Development -->
                <value id="pagando-check-dev" type="host">http://localhost:5001</value>

                <!-- Ngrok -->
                <value id="ngrok" type="host">*.ngrok.io</value>
                
            </values>
        </policy>
        <policy id="font-src">
            <values>
                <!--CDN-->
                <value id="cloudflare" type="host">*.cloudflare.com</value>

                <!--Functions-->
                <value id="example" type="host">*.trustedshops.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
